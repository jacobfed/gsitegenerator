#!/bin/bash

# stop on errors, print commands

set -e
set -x

ssh caen """
# Clean
echo 'Navigate to AWS'
cd ../../afs/umich.edu/group/c/cgalbanlab/Private/gsitegenerator

echo 'Activate virtual Environment'
source env/bin/activate

echo 'Pulling current website generator from github'
git pull

echo 'removing old html'
rm -rf galban/html

# Build
sitegenerator -v galban

cd galban/html/
mv collaborators.html ../../../../Public/html/
mv conferences.html ../../../../Public/html/
mv research.html ../../../../Public/html/
mv index.html ../../../../Public/html/
mv opportunities.html ../../../../Public/html/
mv publications.html ../../../../Public/html/
mv team.html ../../../../Public/html/
mv css/ ../../../../Public/html/
mv fontawesome/ ../../../../Public/html/
mv img/ ../../../../Public/html/
mv projects/ ../../../../Public/html/

"""
